<Window x:Class="ITMO.CSapp.WPF_Practice.ThirdLesson.Exercise2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.CSapp.WPF_Practice.ThirdLesson.Exercise2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Center" Margin="0,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" 
                    Margin="350,40,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="butAdd" Content="x+x" />
            <Button x:Name="butMult" Content="x*x"/>
            <Button x:Name="butSqrt" Content="x^x"/>
        </StackPanel>

    </Grid>
</Window>
